Ejercicio 1: Leer un número y mostrarlo
#include <iostream>
using namespace std;
int main() {
    int num;
    cout << "Ingrese un numero: ";
    cin >> num;
    cout << "El numero ingresado es: " << num;
    return 0;
}
cpp


Ejercicio 2: Leer dos números y mostrarlos
#include <iostream>
using namespace std;
int main() {
    int a, b;
    cout << "Ingrese dos numeros: ";
    cin >> a >> b;
    cout << "Los numeros son: " << a << " y " << b;
    return 0;
}
cpp


Ejercicio 3: Leer un número y mostrar el doble
#include <iostream>
using namespace std;
int main() {
    int num;
    cout << "Ingrese un numero: ";
    cin >> num;
    cout << "El doble es: " << num * 2;
    return 0;
}
